{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "plugins": [
            {
                "name": "typescript-styled-plugin",
                "tags": ["styled", "css", "sty"]
            }
        ],
        "jsx": "react", // https://github.com/kulshekhar/ts-jest/issues/937#issuecomment-456814377
        "moduleResolution": "node",
        "sourceMap": true,
        "lib": ["dom", "es2019", "esnext.asynciterable"],
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,

        // composite project
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "incremental": true,
        "noEmit": false,
        "outDir": "./lib"
    },
    "include": [
        "global.d.ts",
        "**/*.ts",
        "**/*.tsx",
        "**/*.json",
        "src/support/tests/setupJest.js"
    ],
    "references": [{ "path": "../components" }]
}
